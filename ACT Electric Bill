<body>
    <div class="container">
        <img src="Electric bill logo.png" alt="Electricity Logo" class="logo">
        
        <h2>ACT Electricity Bill</h2>
        
        <div class="form-group">
            <label>Consumer Name:</label>
            <input type="text" id="consumerName" placeholder="Enter Name" required>
        </div>
        <div class="form-group">
            <label>Previous Reading (kWh):</label>
            <input type="number" id="prevReading" placeholder="0" required>
        </div>
        <div class="form-group">
            <label>Current Reading (kWh):</label>
            <input type="number" id="currReading" placeholder="0" required>
        </div>
        <div class="form-group">
            <label>Customer Type:</label>
            <select id="customerType">
                <option value="residential">Residential (₱10/unit)</option>
                <option value="commercial">Commercial (₱15/unit)</option>
            </select>
        </div>
        <button onclick="calculateBill()">Calculate Bill</button>
        <div id="result"></div>
    </div>

    <script>
        function calculateBill() {
            const name = document.getElementById('consumerName').value;
            const prev = parseFloat(document.getElementById('prevReading').value);
            const curr = parseFloat(document.getElementById('currReading').value);
            const type = document.getElementById('customerType').value;
            const resultDiv = document.getElementById('result');

            if (isNaN(prev) || isNaN(curr) || name === "") {
                resultDiv.innerHTML = "Please fill in all fields correctly.";
                resultDiv.className = "error";
                return;
            }

            if (curr < prev) {
                resultDiv.innerHTML = "Current reading cannot be less than previous.";
                resultDiv.className = "error";
                return;
            }

            const unitsConsumed = curr - prev;
            let rate = (type === 'residential') ? 10 : 15;
            let totalAmount = unitsConsumed * rate;

            resultDiv.innerHTML = `
                <strong>Consumer:</strong> ${name}<br>
                <strong>Units Used:</strong> ${unitsConsumed} kWh<br>
                <strong>Rate:</strong> ₱${rate}/kWh<br>
                <strong>Total Bill:</strong> ₱${totalAmount.toFixed(2)}
            `;
            resultDiv.className = "success";
        }
    </script>
